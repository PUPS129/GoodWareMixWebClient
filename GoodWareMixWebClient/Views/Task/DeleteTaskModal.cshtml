@using GoodWareMixWebClient.Model;
@using GoodWareMixWebClient.Model.Entity;

@model SchedulerTask


<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content bg-dark">
        <div class="modal-header">
            <h5 class="modal-title" id="DeleteSupplierLabel">Удаление</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form asp-controller="Task" asp-action="DeleteTaskConfirm">
            <input hidden asp-for="NameTask" id="nameTask" value="@Model.NameTask"/>
        <div class="modal-body">
            Вы действительно хотите удалить 
        <strong>@Model.NameTask</strong>
        ?
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Назад</button>
            <input type="submit" class="btn btn-danger btn-hover-alt" value="Удалить"/>
        </div>
        </form>
    </div>
</div>